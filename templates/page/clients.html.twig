{# templates/page/clients.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <!-- Use the same navbar as in dashboard.html.twig -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">ClientHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('dashboard') }}">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('clients') }}">Clients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('factures') }}">Factures</a>
                    </li>
                    <li class="nav-item">
                        <!-- You can add your logout button here if needed -->
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h2 class="text-center text-primary mb-4">Liste des Clients</h2>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for client in clients %}
                        <tr>
                            <td>{{ client.id }}</td>
                            <td>{{ client.name }}</td>
                            <td>{{ client.email }}</td>
                            <td>
                                <a href="{{ path('client_factures', {'id': client.id}) }}" class="btn btn-sm btn-info" title="Voir les factures">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-sm btn-warning" title="Ã‰diter">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="{{ path('client_delete', {'id': client.id}) }}" class="btn btn-sm btn-danger" title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
