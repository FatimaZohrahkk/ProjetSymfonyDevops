{# templates/facture/factures.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Factures{% endblock %}

{% block body %}
    <!-- Use the same navbar as in dashboard.html.twig -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">ClientHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('dashboard') }}">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('clients') }}">Clients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('factures') }}">Factures</a>
                    </li>
                    <li class="nav-item">
                        <!-- You can add your logout button here if needed -->
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h2 class="text-center text-primary mb-4">Liste des Factures</h2>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>Date</th>
                        <th>Montant</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for facture in factures %}
                        <tr>
                            <td>{{ facture.id }}</td>
                            <td>{{ facture.date|date('d/m/Y') }}</td>
                            <td>{{ facture.amount }} MAD</td>
                            <td>
                                <a href="{{ path('facture_view', {'id': facture.id}) }}" class="btn btn-sm btn-info" title="Voir la facture">
                                    <i class="bi bi-eye"></i> Voir
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
