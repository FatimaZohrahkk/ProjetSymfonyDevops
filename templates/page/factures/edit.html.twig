{% extends 'base.html.twig' %}

{% block title %}Edit Invoice{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 style="color: #0a507c;" class="mb-4 text-center">
        Edit Invoice #{{ facture.id }}
    </h2>

    <div class="card p-4 shadow" style="max-width: 600px; margin: 0 auto;">
        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

            {# Chaque champ avec form-control-sm + label color√© #}
            <div class="mb-3">
                {{ form_label(form.date, null, {'label_attr': {'class': 'form-label', 'style': 'color: #1689b9;'}}) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control form-control-sm'}}) }}
                {{ form_errors(form.date) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.montant, null, {'label_attr': {'class': 'form-label', 'style': 'color: #1689b9;'}}) }}
                {{ form_widget(form.montant, {'attr': {'class': 'form-control form-control-sm'}}) }}
                {{ form_errors(form.montant) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.statut, null, {'label_attr': {'class': 'form-label', 'style': 'color: #1689b9;'}}) }}
                {{ form_widget(form.statut, {'attr': {'class': 'form-select form-select-sm'}}) }}
                {{ form_errors(form.statut) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.note, null, {'label_attr': {'class': 'form-label', 'style': 'color: #1689b9;'}}) }}
                {{ form_widget(form.note, {'attr': {'class': 'form-control form-control-sm'}}) }}
                {{ form_errors(form.note) }}
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn" style="background-color: #1689b9; color: white;">
                    <i class="bi bi-save"></i> Update
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
