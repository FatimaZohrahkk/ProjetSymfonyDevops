{% extends 'base.html.twig' %}

{% block title %}Invoice Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: #1689b9;">Invoice No. {{ facture.id }}</h2>

    <div class="card p-4 shadow" style="background-color: #fefefe; max-width: 600px; margin: 0 auto;">
        <div class="card-body">
            <p><strong>Invoice Date:</strong> {{ facture.date|date('d/m/Y') }}</p>
            <p><strong>Amount:</strong> {{ facture.amount }} MAD</p>
            <p><strong>Status:</strong>
                {% if facture.etat == 'payee' %}
                    <span class="badge" style="background-color: #1689b9; color: white;">Paid</span>
                {% elseif facture.etat == 'partiellement' %}
                    <span class="badge" style="background-color: #f7c600; color: black;">Partially Paid</span>
                {% else %}
                    <span class="badge" style="background-color: #e12d39; color: white;">Unpaid</span>
                {% endif %}
            </p>
            <p><strong>Comment:</strong> {{ facture.commentaire ?: 'â€”' }}</p>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a href="{{ path('factures') }}" class="btn" style="background-color: #1689b9; color: white;">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
{% endblock %}
