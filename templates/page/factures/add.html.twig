{% extends 'base.html.twig' %}

{% block title %}Add an Invoice{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 style="color: #1689b9;" class="mb-4 text-center">
     New Invoice
    </h2>

    <div class="card p-4 shadow" style="max-width: 600px; margin: 0 auto;">
        {{ form_start(form) }}
            <div class="mb-3">
                <label for="{{ form.date.vars.id }}" class="form-label" style="color: #1689b9;">Date</label>
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date) }}
            </div>
            <div class="mb-3">
                <label for="{{ form.montant.vars.id }}" class="form-label" style="color: #1689b9;">Amount</label>
                {{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.montant) }}
            </div>
            <div class="mb-3">
                <label for="{{ form.statut.vars.id }}" class="form-label" style="color: #1689b9;">Status</label>
                {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.statut) }}
            </div>
            <div class="mb-3">
                <label for="{{ form.note.vars.id }}" class="form-label" style="color: #1689b9;">Note</label>
                {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.note) }}
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn" style="background-color: #1689b9; color: white;">
                    <i class="bi bi-save"></i> Save
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
