{% extends 'base.html.twig' %}

{% block title %}Edit Client{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #1689b9;">
            <i class="bi bi-pencil-square"></i> Edit Client: {{ client.gerantNom }} {{ client.gerantPrenom }}
        </h2>
        <a href="{{ path('clients') }}" class="btn btn-sm px-4" style="background-color: #b5b8c4; color: white;">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 p-4" style="background-color: #fefefe;">
        {{ form_start(form) }}

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label class="form-label fw-semibold" style="color: #1689b9;">Manager's Last Name</label>
                {{ form_widget(form.gerantNom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold" style="color: #1689b9;">Manager's First Name</label>
                {{ form_widget(form.gerantPrenom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold" style="color: #1689b9;">Company Name</label>
            {{ form_widget(form.raisonSociale, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label class="form-label fw-semibold" style="color: #1689b9;">Phone Number</label>
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold" style="color: #1689b9;">Address</label>
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <label class="form-label fw-semibold" style="color: #1689b9;">City</label>
                {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold" style="color: #1689b9;">Country</label>
                {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn px-4 py-2" style="background-color: #1689b9; color: white;">
                <i class="bi bi-save"></i> Save Changes
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
