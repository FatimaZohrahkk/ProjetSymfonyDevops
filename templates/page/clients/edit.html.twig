{% extends 'base.html.twig' %}

{% block title %}Edit Client{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 style="color: #1689b9;">
                <i class="bi bi-pencil-square"></i> Edit Client: {{ client.nom }} {{ client.prenom }}
            </h2>
            <a href="{{ path('clients') }}" class="btn" style="background-color: #b5b8c4; color: white;">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>

        <div class="card shadow p-4" style="background-color: #fefefe;">
            <form method="post" action="{{ path('client_edit', {'id': client.id}) }}">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="nom" class="form-label" style="color: #1689b9;">Manager's Last Name</label>
                        <input type="text" class="form-control" id="nom" name="nom" value="{{ client.nom }}" required>
                    </div>
                    <div class="col-md-6">
                        <label for="prenom" class="form-label" style="color: #1689b9;">Manager's First Name</label>
                        <input type="text" class="form-control" id="prenom" name="prenom" value="{{ client.prenom }}" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="raison_sociale" class="form-label" style="color: #1689b9;">Company Name</label>
                    <input type="text" class="form-control" id="raison_sociale" name="raison_sociale" value="{{ client.raison_sociale }}" required>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="telephone" class="form-label" style="color: #1689b9;">Phone Number</label>
                        <input type="text" class="form-control" id="telephone" name="telephone" value="{{ client.telephone }}" required>
                    </div>
                    <div class="col-md-6">
                        <label for="adresse" class="form-label" style="color: #1689b9;">Address</label>
                        <input type="text" class="form-control" id="adresse" name="adresse" value="{{ client.adresse }}" required>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-4">
                        <label for="ville" class="form-label" style="color: #1689b9;">City</label>
                        <input type="text" class="form-control" id="ville" name="ville" value="{{ client.ville }}" required>
                    </div>
                    <div class="col-md-4">
                        <label for="pays" class="form-label" style="color: #1689b9;">Country</label>
                        <input type="text" class="form-control" id="pays" name="pays" value="{{ client.pays }}" required>
                    </div>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn" style="background-color: #1689b9; color: white;">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
