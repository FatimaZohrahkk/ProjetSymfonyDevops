{% extends 'base.html.twig' %}

{% block title %}Add a Client{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 style="color: #1689b9;" class="text-center mb-4">Add a New Client</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow" style="border: 2px solid #1689b9; border-radius: 8px;">
                <form method="post" action="{{ path('client_add') }}">
                    <div class="mb-3">
                        <label for="nom" class="form-label" style="color: #1689b9;">Manager's Last Name</label>
                        <input type="text" class="form-control" id="nom" name="nom" required>
                    </div>

                    <div class="mb-3">
                        <label for="prenom" class="form-label" style="color: #1689b9;">Manager's First Name</label>
                        <input type="text" class="form-control" id="prenom" name="prenom" required>
                    </div>

                    <div class="mb-3">
                        <label for="raison_sociale" class="form-label" style="color: #1689b9;">Company Name</label>
                        <input type="text" class="form-control" id="raison_sociale" name="raison_sociale" required>
                    </div>

                    <div class="mb-3">
                        <label for="telephone" class="form-label" style="color: #1689b9;">Phone Number</label>
                        <input type="tel" class="form-control" id="telephone" name="telephone" required>
                    </div>

                    <div class="mb-3">
                        <label for="adresse" class="form-label" style="color: #1689b9;">Postal Address</label>
                        <input type="text" class="form-control" id="adresse" name="adresse" required>
                    </div>

                    <div class="mb-3">
                        <label for="ville" class="form-label" style="color: #1689b9;">City</label>
                        <input type="text" class="form-control" id="ville" name="ville" required>
                    </div>

                    <div class="mb-3">
                        <label for="pays" class="form-label" style="color: #1689b9;">Country</label>
                        <input type="text" class="form-control" id="pays" name="pays" required>
                    </div>

                    <button type="submit" class="btn" style="background-color: #1689b9; color: white;">Add</button>
                    <a href="{{ path('clients') }}" class="btn" style="background-color: #b5b8c4; color: white;">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
