{% extends 'base.html.twig' %}

{% block title %}Add a Client{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 style="color: #1689b9;" class="text-center mb-4">Add a New Client</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow" style="border: 2px solid #1689b9; border-radius: 8px;">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.gerantNom, "Manager's Last Name", {'label_attr': {'class': 'form-label', 'style': 'color: #1689b9;'}}) }}
                    {{ form_widget(form.gerantNom, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                    {{ form_errors(form.gerantNom) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.gerantPrenom, "Manager's First Name", {'label_attr': {'class': 'form-label', 'style': 'color: #1689b9;'}}) }}
                    {{ form_widget(form.gerantPrenom, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                    {{ form_errors(form.gerantPrenom) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.raisonSociale, "Company Name", {'label_attr': {'class': 'form-label', 'style': 'color: #1689b9;'}}) }}
                    {{ form_widget(form.raisonSociale, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                    {{ form_errors(form.raisonSociale) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.telephone, "Phone Number", {'label_attr': {'class': 'form-label', 'style': 'color: #1689b9;'}}) }}
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                    {{ form_errors(form.telephone) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.adresse, "Postal Address", {'label_attr': {'class': 'form-label', 'style': 'color: #1689b9;'}}) }}
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                    {{ form_errors(form.adresse) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.ville, "City", {'label_attr': {'class': 'form-label', 'style': 'color: #1689b9;'}}) }}
                    {{ form_widget(form.ville, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                    {{ form_errors(form.ville) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.pays, "Country", {'label_attr': {'class': 'form-label', 'style': 'color: #1689b9;'}}) }}
                    {{ form_widget(form.pays, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                    {{ form_errors(form.pays) }}
                </div>

                <button type="submit" class="btn" style="background-color: #1689b9; color: white;">
                    <i class="bi bi-plus-circle"></i> Add
                </button>
                <a href="{{ path('clients') }}" class="btn" style="background-color: #b5b8c4; color: white;">
                    Cancel
                </a>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
